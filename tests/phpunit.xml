<phpunit bootstrap="./bootstrap.php">
    <testsuites>
        <testsuite name="allTests">
            <directory>.</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../library/interpid</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="../build/logs/coverage" title="Code Coverage"
             charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
        <log type="testdox-html" target="../build/logs/testdox.html"/>
        <!-- <log type="coverage-text" target="../../../build/logs/text" showUncoveredFiles="true" /> -->
        <!-- <log type="coverage-clover" target="../../../build/logs/clover.xml" /> -->
        <log type="junit" target="../build/logs/junit.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>