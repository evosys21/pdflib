<?xml version="1.0" encoding="UTF-8"?>
<!-- https://phpunit.readthedocs.io/en/latest/configuration.html -->
<phpunit backupGlobals="false"
         colors="true"
         bootstrap="tests/bootstrap.php"
         failOnRisky="true"
         failOnWarning="true"
>
  <php>
    <ini name="xdebug.mode" value="coverage" />
    <env name="APP_ENV" value="test"/>
    <env name="APP_DEBUG" value="1"/>
  </php>
  <coverage>
    <include>
      <directory>./library/interpid/PdfLib</directory>
    </include>
    <exclude>
      <directory>./tests</directory>
      <directory>./vendor</directory>
    </exclude>
    <report>
      <html outputDirectory="build/coverage/html" lowUpperBound="50" highLowerBound="90"/>
      <clover outputFile="build/coverage/clover.xml"/>
      <text outputFile="php://stdout" showUncoveredFiles="true" showOnlySummary="false"/>
    </report>
  </coverage>
  <testsuites>
    <testsuite name="Project Test Suite">
      <directory>tests</directory>
      <exclude>tests/Dev</exclude>
      <exclude>tests/deprecated</exclude>
    </testsuite>
  </testsuites>
  <logging>
    <junit outputFile="build/junit.xml"/>
    <testdoxHtml outputFile="build/testdox.html"/>
    <testdoxText outputFile="build/testdox.txt"/>
    <testdoxXml outputFile="build/testdox.xml"/>
    <text outputFile="build/logfile.txt"/>
  </logging>
</phpunit>
